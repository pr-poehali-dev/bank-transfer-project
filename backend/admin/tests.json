{
  "tests": [
    {
      "name": "Get all users as admin",
      "method": "GET",
      "path": "/?action=users",
      "headers": {
        "X-Is-Admin": "true"
      },
      "expectedStatus": 200,
      "expectedBody": {
        "users": []
      },
      "bodyMatcher": "partial"
    },
    {
      "name": "Access denied for non-admin",
      "method": "GET",
      "path": "/?action=users",
      "headers": {
        "X-Is-Admin": "false"
      },
      "expectedStatus": 403,
      "expectedBody": {
        "error": "string"
      },
      "bodyMatcher": "partial"
    }
  ]
}
